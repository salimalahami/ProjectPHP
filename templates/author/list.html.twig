{# templates/author/list.html.twig #}
<h1>Liste des Auteurs</h1>

{% if aa is not defined or aa is empty %}
    <p>Aucun auteur trouv√©.</p>
{% else %}
    <ul>
        {% for author in aa %}
            <li>
                <img src="{{ asset('image/iss0.png') }}" alt="{{ author.username }}" width="100">
               <strong>{{ author.username }}</strong><br>
                    Email: {{ author.email }}<br>
                    Number of Books: {{ author.nb_books }}
            </li>
        {% endfor %}
    </ul>
    
{% endif %}
